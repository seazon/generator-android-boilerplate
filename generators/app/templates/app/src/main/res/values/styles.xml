<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.App" parent="Theme.MaterialComponents.Light">
        <!-- Global Theme -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="colorError">@color/hh_error</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowBackground">@color/hh_lightSmoke</item>
        <item name="android:statusBarColor">@color/hh_black</item>
        <item name="android:colorBackground">@color/hh_lightSmoke</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="switchStyle">@style/Widget.MaterialComponents.CompoundButton.Switch</item>
    </style>

    <style name="Theme.App.NoActionBar" parent="Theme.App">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
